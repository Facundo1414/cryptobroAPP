# Database - Supabase Connection Pooling
# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://postgres.YOUR_PROJECT:YOUR_PASSWORD@YOUR_REGION.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.YOUR_PROJECT:YOUR_PASSWORD@YOUR_REGION.pooler.supabase.com:5432/postgres"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Supabase
SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"

# Redis (for Bull Queue)
BULL_REDIS_HOST="localhost"
BULL_REDIS_PORT="6379"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3001"

# Server Port
PORT=3000

# Node Environment
NODE_ENV="development"

# Binance API (Optional - can work with public endpoints)
BINANCE_API_KEY=""
BINANCE_API_SECRET=""

# CryptoPanic API (Optional - can work with public endpoints)
CRYPTOPANIC_API_KEY=""

# NewsAPI (Optional - can work with public endpoints)
NEWS_API_KEY=""
